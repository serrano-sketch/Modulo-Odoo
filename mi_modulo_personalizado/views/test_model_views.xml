<odoo>
    <record id="mi_modulo_personalizado_registro_view_tree" model="ir.ui.view">
        <field name="name">mi.modulo.personalizado.registro.list</field>
        <field name="model">mi_modulo_personalizado.registro</field>
        <field name="arch" type="xml">
            <list string="Registros" editable="bottom">
                <field name="name"/>
                <field name="descripcion"/>
                <field name="fecha"/>
                <field name="activo"/>
                <field name="usuario_id"/>
            </list>
        </field>
    </record>

    <record id="mi_modulo_personalizado_registro_view_form" model="ir.ui.view">
        <field name="name">mi.modulo.personalizado.registro.form</field>
        <field name="model">mi_modulo_personalizado.registro</field>
        <field name="arch" type="xml">
            <form string="Registro">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre del registro..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Información General">
                            <field name="descripcion"/>
                            <field name="fecha"/>
                        </group>
                        <group string="Estado">
                            <field name="activo"/>
                            <field name="usuario_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mi_modulo_personalizado_registro" model="ir.actions.act_window">
        <field name="name">Registros</field>
        <field name="res_model">mi_modulo_personalizado.registro</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer registro personalizado.
            </p>
        </field>
    </record>

    <menuitem id="mi_modulo_personalizado_menu_root"
              name="Registros Personalizados"
              sequence="20"/>

    <menuitem id="mi_modulo_personalizado_menu_bar"
              name="Registros"
              parent="mi_modulo_personalizado_menu_root"
              sequence="10"/>

    <menuitem id="mi_modulo_personalizado_menu_action"
              name="Gestión de Registros"
              parent="mi_modulo_personalizado_menu_bar"
              action="action_mi_modulo_personalizado_registro"
              sequence="5"/>
</odoo>
