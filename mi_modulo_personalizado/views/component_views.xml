<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pc_component_tree" model="ir.ui.view">
        <field name="name">pc.component.list</field>
        <field name="model">pc.component</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <record id="view_pc_component_form" model="ir.ui.view">
        <field name="name">pc.component.form</field>
        <field name="model">pc.component</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="currency_id"/>
                    </group>
                    <group>
                        <field name="specs"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pc_component" model="ir.actions.act_window">
        <field name="name">Componentes</field>
        <field name="res_model">pc.component</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
