<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pc_computer_tree" model="ir.ui.view">
        <field name="name">pc.computer.tree</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number"/>
                <field name="user_id"/>
                <field name="last_mod_date"/>
                <field name="price_total"/>
            </tree>
        </field>
    </record>

    <record id="view_pc_computer_form" model="ir.ui.view">
        <field name="name">pc.computer.form</field>
        <field name="model">pc.computer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="number"/>
                        <field name="user_id"/>
                        <field name="last_mod_date"/>
                        <field name="price_total" readonly="1"/>
                    </group>
                    <group>
                        <field name="component_ids" widget="many2many_tags"/>
                        <field name="os_tag_ids" widget="many2many_tags"/>
                        <field name="incidents"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pc_computer" model="ir.actions.act_window">
        <field name="name">Ordenadores</field>
        <field name="res_model">pc.computer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pc_root" name="Equipos" sequence="10" groups="group_pc_assets_user"/>
    <menuitem id="menu_pc_computer" name="Ordenadores" parent="menu_pc_root" action="action_pc_computer" sequence="10" groups="group_pc_assets_user"/>
    <menuitem id="menu_pc_component" name="Componentes" parent="menu_pc_root" action="action_pc_component" sequence="20" groups="group_pc_assets_user"/>
    <menuitem id="menu_pc_tag" name="Sistemas Operativos" parent="menu_pc_root" action="action_pc_os_tag" sequence="30" groups="group_pc_assets_manager"/>

</odoo>
