<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pc_os_tag_tree" model="ir.ui.view">
        <field name="name">pc.os.tag.list</field>
        <field name="model">pc.os.tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_pc_os_tag_form" model="ir.ui.view">
        <field name="name">pc.os.tag.form</field>
        <field name="model">pc.os.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pc_os_tag" model="ir.actions.act_window">
        <field name="name">Sistemas Operativos</field>
        <field name="res_model">pc.os.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_pc_tag" name="Sistemas Operativos" parent="menu_pc_root" action="action_pc_os_tag" sequence="30" groups="group_pc_assets_manager"/>

</odoo>
