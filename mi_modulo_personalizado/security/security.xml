<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_pc_assets_user" model="res.groups">
        <field name="name">Equipos User</field>
        <field name="category_id" ref="base.module_category_administration_records"/>
        <field name="comment">Puede leer y editar equipos y componentes.</field>
    </record>

    <record id="group_pc_assets_manager" model="res.groups">
        <field name="name">Equipos Manager</field>
        <field name="comment">Acceso completo para configurar equipos, componentes y tags.</field>
        <field name="category_id" ref="base.module_category_administration_records"/>
        <field name="implied_ids" eval="[(4, ref('group_pc_assets_user'))]"/>
    </record>

</odoo>
